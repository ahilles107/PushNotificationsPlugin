{% extends 'NewscoopNewscoopBundle::admin_layout.html.twig' %}

{% block admin_title %}{{ parent() }} - PushNotifications Admin{% endblock %}
{% block admin_page_title_content %} {{ 'pushnotifications.menu.create_edit_application'|trans }} {% endblock %}
{% block admin_stylesheets %}
<link rel="stylesheet" href="{{ asset('/bundles/ahsadvertsplugin/css/backend.css') }}">
{% endblock %}
{% block admin_content %}
<div class="plugin-container">
{% if form_errors(form) %}
    <div class="alerts alert-danger">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        {{ form_errors(form) }}
    </div>
{% endif %}
{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
<fieldset>
    {% for id, child in form.children if child.vars.name != "_token" %}
    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">{{ form_label(child) }}</label>
      <div class="col-md-4">
        {{ form_widget(child, {'attr': {'class': 'form-control input-md'}}) }}
      </div>
    </div>
    {% else %}
    <div class="form-group">
        <div class="col-md-4 col-md-offset-4">
            <div class="alert alert-warning" role="alert">{{ 'pushnotifications.createApplication.noSpecialSettings'|trans }}</div>
        </div>
    </div>
    {% endfor %}

<div class="form-group">
  <label class="col-md-4 control-label" for="singlebutton"></label>
  <div class="col-md-4">
    <button id="singlebutton" name="singlebutton" class="btn btn-success pull-right">{{ 'pushnotifications.buttons.save'|trans }}</button>
    <a href="{{ path('ahs_pushnotificationsplugin_applications_index')}}" class="btn btn-default pull-right button-align">{{ 'pushnotifications.buttons.cancelAndGoBack'|trans }}</a>
  </div>
</div>
</fieldset>
{{ form_end(form) }}
{% endblock %}
